<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.cloud.user.infrastructure.mapper.UserAuthMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.framework.cloud.user.domain.entity.UserAuth">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="identity_type" property="identityType"/>
        <result column="identifier" property="identifier"/>
        <result column="credential" property="credential"/>
        <result column="is_verified" property="isVerified"/>
        <result column="is_binding" property="isBinding"/>
        <result column="verified_time" property="verifiedTime"/>
        <result column="un_binding_time" property="unBindingTime"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="create_id" property="createId"/>
        <result column="update_id" property="updateId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
        <result column="version" property="version"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, identity_type, identifier, credential, is_verified, is_binding, verified_time, un_binding_time, tenant_id, create_id, update_id, create_time, update_time, deleted, version
    </sql>

    <select id="page" resultType="com.framework.cloud.user.common.vo.UserAuthPageVO">
        select
            <include refid="Base_Column_List"/>
        from t_user_auth
    </select>
</mapper>